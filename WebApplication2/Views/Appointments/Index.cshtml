@model IEnumerable<WebApplication2.Models.Appointment>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutHeaderAndFooter.cshtml"; // Assuming you have a layout file for consistency
}

<h2 class="mb-4">Appointments</h2>

<p>
    <a class="btn btn-success" href="@Url.Action("Create")">Create New Appointment</a>
</p>

<table class="table table-striped table-bordered mt-3" style="font-size: 1.25rem; width: 100%; max-width: 1200px;">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentReason)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor.DoctorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient.PatientName)
            </th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AppointmentDateTime, "{0:MMMM dd, yyyy h:mm tt}") // Format the date
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppointmentReason)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Doctor.DoctorName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patient.PatientName)
                </td>
                <td class="text-center">
                    <a href="@Url.Action("Edit", new { id = item.AppointmentID })" class="btn btn-primary btn-sm">Edit</a>
                    <a href="@Url.Action("Details", new { id = item.AppointmentID })" class="btn btn-info btn-sm">Details</a>
                    <a href="@Url.Action("Delete", new { id = item.AppointmentID })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this appointment?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
