@model IEnumerable<WebApplication2.Models.Patient>

@{
    ViewBag.Title = "Patient Index";
    Layout = "~/Views/Shared/_LayoutHeaderAndFooter.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha384-DyZvPb+U7B0k2ujrA2V5kvTTB+zZ0xZrYFqtwFz4tM6CkC0shnT8dS5AvpR7GbqD" crossorigin="anonymous">
<!-- Main Header -->
<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center mb-4">Patient List</h2>

            <!-- Create New Button -->
            <div class="d-flex justify-content-end mb-3">
                @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
            </div>

            <!-- Responsive Table -->
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.PatientName)</th>
                            <th>@Html.DisplayNameFor(model => model.Gender)</th>
                            <th>@Html.DisplayNameFor(model => model.DateOfBirth)</th>
                            <th>@Html.DisplayNameFor(model => model.Address)</th>
                            <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                            <th>@Html.DisplayNameFor(model => model.Email)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.PatientName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                                <td>@Html.DisplayFor(modelItem => item.DateOfBirth, "{0:MM/dd/yyyy}")</td> <!-- Format Date -->
                                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                                <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                <td>
                                    <!-- Action Buttons with Icons -->
                                    @*<a href="@Url.Action("Edit", new { id = item.PatientID })" class="btn btn-sm btn-warning" title="Edit">
            <i class="fas fa-edit"></i>
        </a>
        <a href="@Url.Action("Details", new { id = item.PatientID })" class="btn btn-sm btn-info" title="Details">
            <i class="fas fa-eye"></i>
        </a>
        <a href="@Url.Action("Delete", new { id = item.PatientID })" class="btn btn-sm btn-danger" title="Delete" onclick="return confirm('Are you sure you want to delete this patient?');">
            <i class="fas fa-trash-alt"></i>
        </a>*@
                                    <a href="@Url.Action("Edit", new { id = item.PatientID })" class="btn btn-primary" style="color: white;">Edit</a>
                                    <a href="@Url.Action("Details", new { id = item.PatientID })" class="btn btn-info" style="color: white;">Details</a>
                                    <a href="@Url.Action("Delete", new { id = item.PatientID })" class="btn btn-danger" style="color: white;">Delete</a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- No Records Message -->
            @if (!Model.Any())
            {
                <div class="alert alert-info text-center mt-4">
                    No patient records found. Click "Create New" to add a new patient.
                </div>
            }
        </div>
    </div>
</div>

