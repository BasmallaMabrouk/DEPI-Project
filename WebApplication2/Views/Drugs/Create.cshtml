@model WebApplication2.Models.Drug

@{
    ViewBag.Title = "Create New Drug";

}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2 class="text-primary">Create New Drug</h2>
            <hr />

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    @Html.LabelFor(model => model.DrugName, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.DrugName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter drug name" } })
                    @Html.ValidationMessageFor(model => model.DrugName, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DrugDescription, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.DrugDescription, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter drug description" } })
                    @Html.ValidationMessageFor(model => model.DrugDescription, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter drug price" } })
                    @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Create
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary ml-2">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            }

        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<!-- Include Bootstrap and FontAwesome if not already included -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<script src="https://kit.fontawesome.com/a076d05399.js"></script>

