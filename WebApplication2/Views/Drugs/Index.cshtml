@model IEnumerable<WebApplication2.Models.Drug>

@{
    ViewBag.Title = "Drug List";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="text-primary">Drugs Inventory</h2>
                <a href="@Url.Action("Create")" class="btn btn-success">
                    <i class="fas fa-plus"></i> Create New
                </a>
            </div>

            <table class="table table-striped table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().DrugName)</th>
                        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().DrugDescription)</th>
                        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Price)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.DrugName)</td>
                                <td>@Html.DisplayFor(modelItem => item.DrugDescription)</td>
                                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                                <td>
                                    <a href="@Url.Action("Edit", new { id = item.DrugID })" class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a href="@Url.Action("Details", new { id = item.DrugID })" class="btn btn-info btn-sm">
                                        <i class="fas fa-info-circle"></i> Details
                                    </a>
                                    <a href="@Url.Action("Delete", new { id = item.DrugID })" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center">No drugs available.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Include Bootstrap and FontAwesome (if not already included) -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<script src="https://kit.fontawesome.com/a076d05399.js"></script>

