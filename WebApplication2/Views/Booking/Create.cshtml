@model WebApplication2.ViewModels.BookingViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutHeaderAndFooter.cshtml";


    }

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

@using (Html.BeginForm("Create", "Booking", FormMethod.Post))
{
    <div class="container mt-4">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Book an Appointment</h4>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label for="PatientID">Patient ID</label>
                    @Html.TextBoxFor(m => m.PatientID, new { @class = "form-control", @placeholder = "Enter Patient ID" })
                </div>
                <div class="form-group">
                    <label for="AppointmentReason">Appointment Reason</label>
                    @Html.TextBoxFor(m => m.AppointmentReason, new { @class = "form-control", @placeholder = "Enter Appointment Reason" })
                </div>
                <div class="form-group">
                    <label for="DoctorID">Doctor</label>
                    @Html.DropDownListFor(m => m.DoctorID, new SelectList(Model.AvailableDoctors, "DoctorID", "DoctorName"), "-- Select Doctor --", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="AppointmentDateTime">Appointment Date & Time</label>
                    @Html.TextBoxFor(m => m.AppointmentDateTime, new { @class = "form-control", type = "datetime-local" })
                </div>
                <button type="submit" class="btn btn-primary btn-block">Book Appointment</button>
            </div>
        </div>
    </div>
}


